<?xml version="1.0" encoding="utf-8" ?>

<schema xmlns="http://static.acklann.com/schema/v1/daterpillar.xsd"
        name="daterpillar1">
  <table name="Department">
    <column name="Id" autoIncrement="1">
      <dataType scale="10" >int</dataType>
    </column>

    <column name="Name">
      <dataType scale="32">varchar</dataType>
    </column>

    <index name="nameidx1" type="index" unique="true">
      <columnName>Name</columnName>
    </index>
  </table>

  <table name="Employee">
    <column name="Id" autoIncrement="true">
      <dataType scale="10">int</dataType>
    </column>

    <column name="FirstName">
      <dataType scale="32">varchar</dataType>
    </column>

    <column name="LastName" nullable="true">
      <dataType scale="32">varchar</dataType>
    </column>

    <index name="firstnameidx" type="index">
      <columnName>FirstName</columnName>
    </index>
  </table>

  <table name="Roles">
    <column name="EmployeeId">
      <dataType scale="10">int</dataType>
    </column>

    <column name="DeptId">
      <dataType scale="10">int</dataType>
    </column>

    <foreignKey name="fkey1" 
                localColumn="EmployeeId" 
                foreignTable="Employee" 
                foreignColumn="Id">
      <onUpdate>CASCADE</onUpdate>
      <onDelete>CASCADE</onDelete>
    </foreignKey>

    <index name="empIdx" type="index" >
      <columnName>EmployeeId</columnName>
    </index>
  </table>
</schema>