<?xml version="1.0" encoding="utf-8"?>

<package>
  <metadata>
    <id>$id$</id>
    <version>$packageVersion$</version>
    <description>$description$</description>
    <authors>$authors$</authors>
    <owners>$authors$</owners>

    <title>$title$</title>
    <tags>$packageTags$</tags>
    <copyright>$copyright$</copyright>
    <releaseNotes>$PackageReleaseNotes$</releaseNotes>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>

    <iconUrl>$packageIconUrl$</iconUrl>
    <projectUrl>$packageProjectUrl$</projectUrl>
    <licenseUrl>$packageLicenseUrl$</licenseUrl>
  </metadata>
  <files>
    <file src="readme.txt"
          target="" />

    <file src="Cmdlets\Convert-DllToSchema.ps1"
          target="build" />

    <file src="Daterpillar.Automation.targets"
          target="build\$id$.targets" />

    <file src="bin\$configuration$\*.deps.json"
          target="tools" />

    <file src="bin\$configuration$\*.dll"
          target="tools" />

    <file src="bin\$configuration$\x86\*"
          target="tools\x86" />

    <file src="bin\$configuration$\x64\*"
          target="tools\x64" />

    <file src="*.psd1"
          target="tools" />
  </files>
</package>