<?xml version="1.0" encoding="utf-8"?>

<package>
  <metadata>
    <id>$id$</id>
    <title>$Title$</title>
    <version>$PackageVersion$</version>
    <description>$Description$</description>
    <tags>$PackageTags$</tags>

    <owners>$Authors$</owners>
    <authors>$Authors$</authors>
    <projectUrl>$PackageProjectUrl$</projectUrl>
    <iconUrl>$PackageIconUrl$</iconUrl>

    <copyright>$Copyright$</copyright>
    <licenseUrl>$PackageLicenseUrl$</licenseUrl>
    <releaseNotes>$PackageReleaseNotes$</releaseNotes>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
  </metadata>
  <files>
    <file src="Daterpillar.Automation.targets"
          target="build\$id$.targets" />

    <file src="bin\$Configuration$\*.deps.json"
          target="tools" />

    <file src="bin\$Configuration$\*.config"
          target="tools" />

    <file src="bin\$Configuration$\*.dll"
          target="tools" />

    <file src="bin\$Configuration$\x86\*"
          target="tools\x86" />

    <file src="bin\$Configuration$\x64\*"
          target="tools\x64" />

    <file src="Cmdlets\*ps*1"
          target="tools" />

    <file src="*.psd1"
          target="tools" />
  </files>
</package>