<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Acklann.Daterpillar</RootNamespace>
    <AssemblyName>Acklann.Daterpillar</AssemblyName>
  </PropertyGroup>

  <PropertyGroup>
    <Title>Daterpillar</Title>
    <PackageVersion>7.0.25</PackageVersion>
    <AssemblyVersion>7.0.25</AssemblyVersion>
    <Authors>Ackara</Authors>
    <Company>Ackara</Company>
    <Owners>Ackara</Owners>
    <Copyright>MIT License</Copyright>
    <RepositoryUrl>https://github.com/Ackara/Daterpillar.git</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Ackara/Daterpillar</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/Ackara/Daterpillar/blob/master/license.txt</PackageLicenseUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/Ackara/Daterpillar/master/art/icon.png</PackageIconUrl>
    <Description>A mico orm</Description>
    <PackageTags>orm</PackageTags>
    <PackageReleaseNotes>
      version 4.8.4
      -------------
      * Fix Invoke-SqlCommand inability to handle GO statements.

      version 4.8.0
      -------------
      * Add ToAssignments method to LinqToSqlConverter class.

      verion 4.7.23
      -------------
      * Have the ConvertT0-Script auto sort the schema.

      version 4.7.22
      --------------
      * Fix SQLiteInformationSchema.

      version 4.7.19
      --------------
      * Fix schema.sort method

      version 4.7.18
      --------------
      * Add RemoveTable method to schema class

      version 4.7.14
      --------------
      * Add msbuild targets to automation package

      version 4.7.12
      --------------
      * Add Compare-Database cmdlet

      version 4.7.9
      -------------
      * Remove named parameter sets

      version 4.6.13
      --------------
      Add features:
      * Add DeleteIfExist switch to Add-Database cmdlet
    </PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Acklann.GlobN" Version="2.1.7" />
    <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="daterpillar.xsd" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Configuration\DataTypeFactory.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>DataTypeFactory.cs</LastGenOutput>
    </None>
    <None Update="Configuration\Syntax.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>Syntax.cs</LastGenOutput>
    </None>
    <None Update="Compilation\Resolvers\TypeResolverBase.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>TypeResolverBase.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Configuration\DataTypeFactory.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>DataTypeFactory.tt</DependentUpon>
    </Compile>
    <Compile Update="Configuration\Syntax.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Syntax.tt</DependentUpon>
    </Compile>
    <Compile Update="Compilation\Resolvers\TypeResolverBase.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>TypeResolverBase.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup Label="Nuget">
    <Content Include="msbuild.targets">
      <PackagePath>build\$(AssemblyName).targets</PackagePath>
    </Content>

    <Content Condition="Exists('..\..\artifacts\$(MSBuildProjectName)')" Include="..\..\artifacts\$(MSBuildProjectName)\*">
      <PackagePath>tools\$(TargetFramework)</PackagePath>
      <Visible>false</Visible>
    </Content>

    <Content Include="..\$(MSBuildProjectName).Powershell\*.ps1">
      <PackagePath>tools\$(TargetFramework)</PackagePath>
      <Visible>false</Visible>
    </Content>

    <Content Include="..\..\readme.md">
      <PackagePath>readme.md</PackagePath>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>
</Project>