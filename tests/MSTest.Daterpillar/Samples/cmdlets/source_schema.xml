<?xml version="1.0" encoding="utf-8" ?>
<schema xmlns="http://static.acklann.com/schema/v2/daterpillar.xsd">
  <table name="user">
    <column name="Id"
            autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Email">
      <dataType scale="64">varchar</dataType>
    </column>

    <column name="PasswordHash">
      <dataType>text</dataType>
    </column>
  </table>

  <table name="roles">
    <column name="Id"
            autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Name">
      <dataType scale="64">varchar</dataType>
    </column>
  </table>

  <table name="address">
    <column name="Id"
            autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Street1">
      <dataType scale="256">varchar</dataType>
    </column>

    <column name="Street2">
      <dataType scale="256">varchar</dataType>
    </column>

    <column name="City">
      <dataType scale="256">varchar</dataType>
    </column>

    <column name="State">
      <dataType scale="256">varchar</dataType>
    </column>

    <column name="Country">
      <dataType scale="256">varchar</dataType>
    </column>

    <column name="Postal">
      <dataType scale="32">varchar</dataType>
    </column>
  </table>

  <script><![CDATA[ INSERT INTO roles (Id, Name) VALUES ('1', 'admin'), ('2', 'guest');]]></script>
</schema>