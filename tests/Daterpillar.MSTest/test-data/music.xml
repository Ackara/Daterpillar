<?xml version="1.0" encoding="utf-8"?>

<schema xmlns="https://raw.githubusercontent.com/Ackara/Daterpillar/master/src/daterpillar.xsd">
  <table name="song">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Name">
      <dataType>varchar</dataType>
    </column>

    <column name="Length">
      <documentation>Get or set the song's length in seconds.</documentation>
      <dataType>int</dataType>
    </column>

    <column name="Genre">
      <dataType>varchar</dataType>
    </column>

    <column name="Disc">
      <dataType>int</dataType>
    </column>

    <column name="Track">
      <dataType>smallInt</dataType>
    </column>

    <column name="Artist">
      <dataType>varchar</dataType>
    </column>

    <column name="Album">
      <dataType>varchar</dataType>
    </column>
  </table>

  <table name="album">
    <column name="Name">
      <dataType>varchar</dataType>
    </column>

    <column name="Year">
      <dataType>int</dataType>
    </column>

    <column name="ArtistId">
      <dataType>int</dataType>
    </column>

    <column name="SongId">
      <dataType>int</dataType>
    </column>

    <foreignKey localColumn="SongId" foreignTable="song" foreignColumn="Id" />
    <foreignKey localColumn="ArtistId" foreignTable="artist" foreignColumn="Id" />

    <index type="primary-key">
      <columnName>SongId</columnName>
      <columnName>ArtistId</columnName>
    </index>
  </table>

  <table name="artist">
    <column name="Name">
      <dataType scale="32">varchar</dataType>
    </column>

    <column name="Bio" default="">
      <dataType>text</dataType>
    </column>

    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="DOB">
      <dataType>dateTime</dataType>
    </column>
  </table>

  <script>
    <![CDATA[
      INSERT INTO artist (Name)
      VALUES ('Drake'), ('Skepta'), ('Big-Sean');
      ]]>
  </script>
</schema>