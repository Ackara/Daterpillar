<?xml version="1.0" encoding="utf-8"?>

<schema xmlns="https://raw.githubusercontent.com/Ackara/Daterpillar/master/src/daterpillar.xsd">
  <table suid="100" name="track">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Name">
      <dataType>varchar</dataType>
    </column>

    <column suid="201" name="Duration" default="0">
      <documentation>Get or set the song's length in seconds.</documentation>
      <dataType>int</dataType>
    </column>

    <column name="Genre">
      <dataType>int</dataType>
    </column>

    <column name="Track">
      <dataType>smallInt</dataType>
    </column>

    <column name="Synced" default="0">
      <dataType>bool</dataType>
    </column>

    <column name="Artist">
      <dataType>varchar</dataType>
    </column>

    <column name="Album">
      <dataType>varchar</dataType>
    </column>

    <column name="Disc" default="1">
      <dataType>int</dataType>
    </column>

    <index>
      <columnName>Name</columnName>
    </index>
  </table>

  <table name="album">
    <column name="Name">
      <dataType>varchar</dataType>
    </column>

    <column name="Year">
      <dataType>int</dataType>
    </column>

    <column name="ArtistId">
      <dataType>int</dataType>
    </column>

    <column name="SongId">
      <dataType>int</dataType>
    </column>

    <foreignKey localColumn="SongId" foreignTable="track" foreignColumn="Id" />
    <foreignKey localColumn="ArtistId" foreignTable="artist" foreignColumn="Id" />

    <index type="primary-key">
      <columnName>SongId</columnName>
      <columnName>ArtistId</columnName>
    </index>
  </table>

  <table name="artist">
    <column name="Name">
      <dataType scale="32">varchar</dataType>
    </column>

    <column name="Bio" default="&apos;&apos;">
      <dataType>text</dataType>
    </column>

    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="DOB">
      <dataType>dateTime</dataType>
    </column>
  </table>

  <table name="label">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Name">
      <dataType>varchar</dataType>
    </column>

    <column name="TotalArtist" default="0">
      <dataType>tinyInt</dataType>
    </column>
  </table>

