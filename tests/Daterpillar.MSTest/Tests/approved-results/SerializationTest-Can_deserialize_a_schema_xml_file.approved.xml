<schema include="music-data.xml" xmlns="https://raw.githubusercontent.com/Ackara/Daterpillar/master/src/daterpillar.xsd">
  <table suid="100" name="song">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <column suid="201" name="Length">
      <documentation>Get or set the song's length in seconds.</documentation>
      <dataType>int</dataType>
    </column>
    <column name="Genre">
      <dataType>int</dataType>
    </column>
    <column name="Disc" default="1">
      <dataType>int</dataType>
    </column>
    <column name="Track">
      <dataType>smallInt</dataType>
    </column>
    <column name="Artist">
      <dataType>varchar</dataType>
    </column>
    <column name="Album">
      <dataType>varchar</dataType>
    </column>
    <foreignKey localColumn="Genre" foreignTable="genre" foreignColumn="Id" onUpdate="cascade" onDelete="restrict" />
    <index type="index">
      <columnName order="asc">Name</columnName>
    </index>
    <index type="index">
      <columnName order="asc">Genre</columnName>
    </index>
  </table>
  <table name="album">
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <column name="Year">
      <dataType>int</dataType>
    </column>
    <column name="ArtistId">
      <dataType>int</dataType>
    </column>
    <column name="SongId">
      <dataType>int</dataType>
    </column>
    <foreignKey localColumn="SongId" foreignTable="song" foreignColumn="Id" onUpdate="cascade" onDelete="restrict" />
    <foreignKey localColumn="ArtistId" foreignTable="artist" foreignColumn="Id" onUpdate="cascade" onDelete="restrict" />
    <index type="primary-key">
      <columnName order="asc">SongId</columnName>
      <columnName order="asc">ArtistId</columnName>
    </index>
  </table>
  <table name="artist">
    <column name="Name">
      <dataType scale="32">varchar</dataType>
    </column>
    <column name="Bio" default="''">
      <dataType>text</dataType>
    </column>
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>
    <column name="DOB">
      <dataType>dateTime</dataType>
    </column>
  </table>
  <table name="genre">
    <column name="Id">
      <dataType>int</dataType>
    </column>
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <index type="index" unique="true">
      <columnName order="asc">Name</columnName>
    </index>
  </table>
