<schema version="1.0.0" xmlns="https://raw.githubusercontent.com/Ackara/Daterpillar/master/src/Daterpillar/daterpillar.xsd">
  <include>music-data.xml</include>
  <table name="Album">
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <column name="ArtistId">
      <dataType>int</dataType>
    </column>
    <column name="SongId">
      <dataType>int</dataType>
    </column>
    <column name="Year">
      <dataType>int</dataType>
    </column>
    <foreignKey localColumn="ArtistId" foreignTable="artist" foreignColumn="Id" />
    <foreignKey localColumn="SongId" foreignTable="$(100)" foreignColumn="Id" />
    <index type="primary-key">
      <columnName>ArtistId</columnName>
      <columnName>SongId</columnName>
    </index>
  </table>
  <table name="artist">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <column name="Bio">
      <dataType>varchar</dataType>
    </column>
    <column name="DOB">
      <dataType>dateTime</dataType>
    </column>
    <index>
      <columnName>Name</columnName>
    </index>
  </table>
  <table name="genre">
    <column name="Id">
      <dataType>int</dataType>
    </column>
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <index type="primary-key">
      <columnName>Id</columnName>
    </index>
    <index unique="true">
      <columnName>Name</columnName>
    </index>
  </table>
  <table suid="100" name="song">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>
    <column suid="201" name="Title">
      <dataType>varchar</dataType>
    </column>
    <column name="Length">
      <dataType>int</dataType>
    </column>
    <column name="Artists">
      <dataType>varchar</dataType>
    </column>
    <column name="Album">
      <dataType>varchar</dataType>
    </column>
    <column suid="205" name="Track" default="1">
      <dataType>int</dataType>
    </column>
    <column name="Disc" default="1">
      <dataType>int</dataType>
    </column>
    <column name="Genre">
      <dataType>int</dataType>
    </column>
    <foreignKey localColumn="Genre" foreignTable="genre" foreignColumn="Id" />
    <index>
      <columnName>Genre</columnName>
    </index>
  </table>
  <script name="genre seed-data">INSERT INTO genre (Id, Name) VALUES 
('0', 'Hip Hop'),
('1', 'Pop'),
('2', 'Country'),
('3', 'Rock n Roll');</script>
</schema>