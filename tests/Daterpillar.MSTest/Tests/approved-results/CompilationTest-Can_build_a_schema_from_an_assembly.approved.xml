<?xml version="1.0" encoding="utf-8"?>
<schema include="music-data.xml" xmlns="https://raw.githubusercontent.com/Ackara/Daterpillar/master/src/daterpillar.xsd">
  <table name="Album">
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <column name="ArtistId">
      <dataType>int</dataType>
    </column>
    <column name="SongId">
      <dataType>int</dataType>
    </column>
    <column name="Year">
      <dataType>int</dataType>
    </column>
    <foreignKey localColumn="ArtistId" foreignTable="artist" foreignColumn="Id" onUpdate="cascade" onDelete="restrict" />
    <foreignKey localColumn="SongId" foreignTable="song" foreignColumn="Id" onUpdate="cascade" onDelete="restrict" />
    <index type="primary-key">
      <columnName order="asc">ArtistId</columnName>
      <columnName order="asc">SongId</columnName>
    </index>
  </table>
  <table name="artist">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <column name="Bio">
      <dataType>varchar</dataType>
    </column>
    <column name="DOB">
      <dataType>dateTime</dataType>
    </column>
    <index type="index">
      <columnName order="asc">Name</columnName>
    </index>
  </table>
  <table name="genre">
    <column name="Id">
      <dataType>int</dataType>
    </column>
    <column name="Name">
      <dataType>varchar</dataType>
    </column>
    <index type="primary-key">
      <columnName order="asc">Id</columnName>
    </index>
    <index type="index" unique="true">
      <columnName order="asc">Name</columnName>
    </index>
  </table>
  <table name="song">
    <column name="Id" autoIncrement="true">
      <dataType>int</dataType>
    </column>
    <column name="Title">
      <dataType>varchar</dataType>
    </column>
    <column name="Length">
      <dataType>int</dataType>
    </column>
    <column name="Artists">
      <dataType>varchar</dataType>
    </column>
    <column name="Album">
      <dataType>varchar</dataType>
    </column>
    <column name="Track" default="1">
      <dataType>int</dataType>
    </column>
    <column name="Disc" default="1">
      <dataType>int</dataType>
    </column>
    <column name="Genre">
      <dataType>int</dataType>
    </column>
    <foreignKey localColumn="Genre" foreignTable="genre" foreignColumn="Id" onUpdate="cascade" onDelete="restrict" />
    <index type="index">
      <columnName order="asc">Genre</columnName>
    </index>
  </table>
  <script name="genre seed-data"><![CDATA[INSERT INTO genre (Id, Name) VALUES 
('0', 'Hip Hop'),
('1', 'Pop'),
('2', 'Country'),
('3', 'Rock n' Roll');]]></script>
</schema>