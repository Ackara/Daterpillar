<?xml version="1.0" encoding="utf-8" ?>
<schema xmlns="http://static.acklann.com/schema/v2/daterpillar.xsd">
  <table name="author">
    <column name="Id"
            autoIncrement="true">
      <dataType>int</dataType>
    </column>

    <column name="Name">
      <dataType scale="64">varchar</dataType>
    </column>

    <column name="User_Id">
      <dataType>int</dataType>
    </column>

    <foreignKey foreignColumn="User_Id"
                foreignTable="user"
                localColumn="Id" />
  </table>
</schema>