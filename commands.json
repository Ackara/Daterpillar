{
	"commands":
	{
		"version: major":
		{
			"fileName": "powershell.exe",
			"workingDirectory": ".",
			"arguments": "-ExecutionPolicy Bypass -NoProfile -NonInteractive -File build.ps1 version -Major"
		},
		"version: minor":
		{
			"fileName": "powershell.exe",
			"workingDirectory": ".",
			"arguments": "-ExecutionPolicy Bypass -NoProfile -NonInteractive -File build.ps1 version -Minor"
		},
		"version: patch":
		{
			"fileName": "powershell.exe",
			"workingDirectory": ".",
			"arguments": "-ExecutionPolicy Bypass -NoProfile -NonInteractive -File build.ps1 version"
		},
		"publish":
		{
			"fileName": "powershell.exe",
			"workingDirectory": ".",
			"arguments": "-ExecutionPolicy Bypass -NoProfile -NonInteractive -File build.ps1 publish"
		},
		"restore":
		{
			"fileName": "powershell.exe",
			"workingDirectory": ".",
			"arguments": "-ExecutionPolicy Bypass -NoProfile -NonInteractive -File build.ps1 restore"
		},
		"clean":
		{
			"fileName": "powershell.exe",
			"workingDirectory": ".",
			"arguments": "-ExecutionPolicy Bypass -NoProfile -NonInteractive -File build.ps1 clean"
		}
	},
	"-vs-binding":
	{
		"ProjectOpened":
		[
			"restore"
		]
	}
