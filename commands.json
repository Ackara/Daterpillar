{
  "commands":
  {
    "version: patch":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-NoProfile -ExecutionPolicy Bypass -NonInteractive -File build.ps1 version"
    },
    "version: minor":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 version -Minor"
    },
    "version: major":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 version -Major"
    },
    "create packages":
    {
      "fileName": "powershell.exe",
      "workingDirectory": ".",
      "arguments": "-ExecutionPolicy Bypass -NonInteractive -File build.ps1 pack"
    }
  }
}